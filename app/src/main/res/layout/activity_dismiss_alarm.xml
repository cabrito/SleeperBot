<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="io.github.cabrito.sleeperbot.activities.DismissAlarmActivity">

    <!-- Alarm Title -->
    <TextView
        android:id="@+id/textview_activity_dismiss_alarmtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alarm Title Goes Here"/>

    <Button
        android:id="@+id/button_activity_dismiss_dismissalarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/activity_dismiss_button_dismissalarm"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/textview_activity_dismiss_alarmtitle"/>

</android.support.constraint.ConstraintLayout>
