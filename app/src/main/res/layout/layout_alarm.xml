<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp">

    <!-- Container for all Assets -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Alarm Title -->
        <TextView
            android:id="@+id/text_view_activity_alarms_alarmtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Alarm Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <!-- Alarm Time -->
        <TextView
            android:id="@+id/text_view_activity_alarms_alarmtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:20"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@id/text_view_activity_alarms_alarmtitle"
            app:layout_constraintTop_toBottomOf="@id/text_view_activity_alarms_alarmtitle" />

        <!-- Alarm Days -->
        <LinearLayout
            android:id="@+id/linear_layout_activity_alarms_daysofweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_activity_alarms_alarmtime"
            app:layout_constraintStart_toStartOf="@id/text_view_activity_alarms_alarmtime">

            <TextView
                android:id="@+id/text_view_activity_alarms_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/sunday_short" />

            <TextView
                android:id="@+id/text_view_activity_alarms_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/monday_short" />

            <TextView
                android:id="@+id/text_view_activity_alarms_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/tuesday_short" />

            <TextView
                android:id="@+id/text_view_activity_alarms_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/wednesday_short" />

            <TextView
                android:id="@+id/text_view_activity_alarms_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/thursday_short" />

            <TextView
                android:id="@+id/text_view_activity_alarms_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/friday_short" />

            <TextView
                android:id="@+id/text_view_activity_alarms_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/saturday_short" />

        </LinearLayout>

        <!-- Alarm Switch -->
        <Switch
            android:id="@+id/switch_activity_alarms_alarmswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>